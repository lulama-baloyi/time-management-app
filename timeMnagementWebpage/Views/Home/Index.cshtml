@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <!-- Welcome Section -->
    <h1 class="display-4">Welcome to the Time Management Application</h1>
    <p class="lead">Easily manage your time, track tasks, and stay productive!</p>
    <hr class="my-4">
    <p>New here? Start by registering an account. Returning users can log in below.</p>
    <a class="btn btn-primary btn-lg" href="/Account/Register" role="button">Register</a>
    <a class="btn btn-secondary btn-lg" href="/Account/Login" role="button">Login</a>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <h2 class="text-center">Features</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Modules</h5>
                    <p class="card-text">Add and organize all your semester modules with ease.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Track Study Hours</h5>
                    <p class="card-text">Monitor your weekly study hours and stay on track.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Progress Reports</h5>
                    <p class="card-text">View detailed reports to see how you're progressing.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call-to-Action Section -->
<div class="container mt-5 text-center">
    <h3>Why Wait?</h3>
    <p>Join today and take control of your time!</p>
    <a class="btn btn-success btn-lg" href="/Account/Register" role="button">Get Started</a>
</div>

<!-- Footer Section -->
<footer class="bg-dark text-white text-center py-3 mt-5">
    <div class="container">
        &copy; 2023 Time Management Application. All rights reserved.
    </div>
</footer>

